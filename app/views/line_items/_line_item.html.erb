<% if line_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr>
<% end %>

  <td><%= line_item.product.title %></td>
  <td class="item_price">
          <%= number_to_currency(line_item.product.price, unit: "", delimiter: " ",
								format: "%n %u") %>
  </td>
  <td class="quantity"> <%= line_item.quantity %>&times;</td>
  <td class="item_price">
          <%= number_to_currency(line_item.total_price, unit: UAH, delimiter: " ",
								format: "%n %u")%>
  </td>
  <td> <%= button_to 'Удалить позицию', line_item, method: :delete %>
  </td>

</tr>
