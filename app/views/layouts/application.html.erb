<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class='<%= controller.controller_name %>' >
  <div id="banner">
    <%= form_tag store_path, class: 'locale' do %>
      <%= select_tag 'set_locale',
                      options_for_select(LANGUAGES, I18n.locale.to_s),
                      onchange: 'this.form.submit()' %>
      <%= submit_tag 'submit' %>
      <%= javascript_tag "$('.locale input').hide()" %>
    <% end %>

    <%= image_tag("logo.png") %>
<!--<%#= @page_title || "Pragmatic Bookshelf" %>  первоначальная версия -->
    <%=  @page_title || t('.title') %>       <!-- версия c локализацией -->
  </div>

  <div id="columns">

<!--   левый сайд-бар для корзины -->
	<div id="side">

<!--      <div id="cart"
         <%# if @cart.line_items.empty? %>
            style="display: none"
         <%# end %>
         >
         <%#= render(@cart) %>
      </div>-->

      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
        <% end %>
      <% end %>

<br>
	  <div id="date">
		<%= DateTime.now.strftime("%Y-%m-%d / %H:%M") %>
		<br>
		<%#= 'session_count - ' + session[:count].to_s %>
		<%#= 'index_vizit -' + @index_vizit.to_s %>
	  </div>
	  <ul>
		<li><a href="<%= store_path %>">  <%= t('.home')     %></a>  </li>
		<li><a href="http://www..../faq"> <%= t('.questions')%></a>  </li>
		<li><a href="http://www..../news"><%= t('.news')     %></a>  </li>
		<li><a href="http://myphpdevelop.zz.mu"><%= t('.contact') %></a></li>
	  </ul>


	  <% if session[:user_id] %>
	    <ul>
          <li><%= link_to 'Orders', orders_path %>    </li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Users', users_path %>      </li>
          <%= button_to 'Logout', logout_path, method: :delete %>
        </ul>
      <% else %>
        <ul>
          <li><%= link_to t('.login'), login_path %></li>
        </ul>
      <% end %>

    </div>
<!-- 	  конец левого сайд-бара -->

    <div id="main">
      <%= yield %>
    </div>
  </div>
 <%= debug(params) if Rails.env.development? %>
</body>
</html>
