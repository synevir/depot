<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class='<%= controller.controller_name %>' >
  <div id="banner">
    <%= form_tag store_path, class: 'locale' do %>
      <%= select_tag 'set_locale', options_for_select(LANGUAGES, I18n.locale.to_s),
                      onchange: 'this.form.submit()',
                      class: "selectpicker" %>
      <%= submit_tag 'submit' %>
      <%= javascript_tag "$('.locale input').hide()" %>
    <% end %>

    <%= image_tag("logo.png") %>
<!--<%#= @page_title || "Pragmatic Bookshelf" %>  первоначальная версия -->
    <%=  @page_title || t('.title') %>       <!-- версия c локализацией -->
  </div>

  <div id="columns">

<!--   левый сайд-бар для корзины -->
	<div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
        <% end %>
      <% end %>

      <br>
	  <div id="date">
		<%= DateTime.now.strftime("%Y-%m-%d / %H:%M") %>
		<br>
	  </div>

<!--	  <div id="nav_div">-->
	    <p>
<!--         <div id="nav_shared"> -->
            <ul class="nav nav-pills nav-stacked">
              <li><%= link_to t('.home'),      store_path %></li>
              <li><%= link_to t('.questions'), store_path %></li>
              <li><%= link_to t('.contact'), "http://myphpdevelop.zz.mu" %></li>
            </ul>
<!--         </div> -->
        <p>
<!--         <div id="nav_admin"> -->
            <% if session[:user_id] %>
	          <%= render 'layouts/admin_nav_links' %>
            <% else %>
              <ul class="nav nav-pills">
                <li><%= link_to t('.login'), login_path %></li>
              </ul>
            <% end %>
<!--         </div> -->

<!--       </div> -->

    </div>  <!--div side-->
<!-- 	  конец левого сайд-бара -->

    <div id="main">
      <%= yield %>
    </div>
  </div>
 <%= debug(params) if Rails.env.development? %>
</body>
</html>
