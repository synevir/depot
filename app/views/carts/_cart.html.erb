<!-- <h2>Your Cart:</h2> -->
<h2><%= t('.title')%></h2>

<hr />

<table id='cart_table' border="0">
  <tr>
	<th> <%= t('.cart_table_product') %>  </th>
	<th> <%= t('.cart_table_price')   %>  </th>
	<th> <%= t('.cart_table_items')   %>  </th>
	<th> <%= t('.cart_table_summ')    %>  </th>
  </tr>
  <%= render(cart.line_items) %>
  <tr class="total_line">
    <td colspan="2"> <%= t('.cart_table_total') %></td>
    <td colspan="2"id="total_cell" align="center">
      <%= number_to_currency(cart.total_price, delimiter: " ", format: "%n %u")%>
    </td>

  </tr>
</table>

<!-- кнопка "оформить заказ" различные варианты деактивации после нажатия-->
